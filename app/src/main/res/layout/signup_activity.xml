<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_activity">

    <ImageView
        android:id="@+id/imgsignup_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/book"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgsignup_logo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="SignUp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etfname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtsignup"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:hint="Enter first name"
        android:paddingLeft="20dp"
        android:background="@drawable/round_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etlname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etfname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:hint="Enter last name"
        android:paddingLeft="20dp"
        android:background="@drawable/round_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etusername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etlname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:hint="Enter user name"
        android:paddingLeft="20dp"
        android:background="@drawable/round_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/black"/>


    <EditText
        android:id="@+id/etsignup_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etusername"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:hint="Enter password"
        android:paddingLeft="20dp"
        android:background="@drawable/round_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="numberPassword"/>



        <Button
            android:id="@+id/btnsignup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etsignup_password"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="SignUp"
            android:textSize="18sp"
            android:background="@drawable/round_button" />

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/login_txt"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>